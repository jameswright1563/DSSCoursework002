<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>

</head>
<body data-home-page="login.html" data-home-page-title="Home" class="u-body u-xl-mode"><div class="u-clearfix u-sheet u-valign-middle u-sheet-1">
        <%- include('../partials/navbar', {loggedin:loggedin}); %>
        <section>
            <h1 align="center">Food Blog</h1>
        </section>
    <div class="flex-container">
        <div class="login">
            <p id="message"></p>
            <p><%= error %></p>
            <h1>Login</h1>
            <form action="/auth" method="post" class="form1">
                <label for="username">
                    <!-- font awesome icon -->
                    <i class="fas fa-user"></i>
                </label>
                <input type="hidden" name="_csrf" value="{{csrfToken}}">

                <input type="text" name="username" placeholder="Username" id="username" required>
                <br>
                <label for="password">
                    <i class="fas fa-lock"></i>
                </label>
                <input type="password" name="password" placeholder="Password" id="password" required>
                <br>
                <a href="/forgot">Forgotten Username/Password?</a>
                <br>
                <div class="g-recaptcha" data-sitekey="6LexqfgfAAAAAETE3gNXm0VEaZ3DMwwOlAxYc0Hu"></div>
                <br>
                <input id="loginButton" type="submit" value="Login">
            </form>

        </div>

        <div class="register">
            <h1>Sign Up</h1>
            <form action="/signup" method="post" class="form1">
                <label for="username">
                    <!-- font awesome icon -->
                    <i class="fas fa-user"></i>
                </label>

                <input type="text" name="username" placeholder="Username" id="username" required>
                <br>
                <label for="email">
                    <i class="fa fa-paper-plane"></i>
                </label>
                <input type="email"  name="email" placeholder="Email Address" id="email" required>
                <br>
                <label for="password2">
                    <i class="fas fa-lock"></i>
                </label>
                <input type="password" name="password2" placeholder="Password" id="password" required>
                <br>
                <label for="confirm_password">
                    <i class="fa fa-check"></i>
                </label>
                <input type="password"  name="confirm_password" placeholder="Confirm Password" id="confirm_password" required>
                <br>
                <div class="g-recaptcha" data-sitekey="6LexqfgfAAAAAETE3gNXm0VEaZ3DMwwOlAxYc0Hu"></div>
                <br>

                <input type="submit" value="Sign Up">
            </form>
        </div>
    </div>

</div>

<footer>
    <%- include('../partials/footer'); %>
</footer>
</body>
</html>